{
  "name": "pixi-panel",
  "description": "Browser agnostic DevTools for PixiJS",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm:dev:*\"",
    "dev:mini": "esbuild --bundle src/ui-mini/ui-mini.ts --watch --outfile=./build/ui-mini.txt",
    "dev:legacy": "esbuild --bundle src/pixi-devtools/ui-legacy.ts --watch --outfile=./build/ui-legacy.txt",
    "build": "esbuild --bundle src/ui-mini/ui-mini.ts --outfile=./build/ui-mini.txt && esbuild --bundle src/pixi-devtools/ui-legacy.ts --outfile=./build/ui-legacy.txt"
  },
  "devDependencies": {
    "blender-elements": "workspace:*",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.1",
    "phaser": "^3.90.0",
    "pixi.js": "^8.14.3",
    "ui-protocol": "workspace:*"
  }
}
