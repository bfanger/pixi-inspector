{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "ignoreDeprecations": "5.0",
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "pixi-panel/*": ["./node_modules/pixi-panel/*"]
    },
    "allowArbitraryExtensions": true
  },
  "include": [
    "**/*.d.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.svelte",
    ".*.js",
    "**/*.js",
    "**/*.jsx",
    ".*.cjs",
    "**/*.cjs",
    "**/.storybook/*.ts",
    "packages/blender-elements/.storybook/main.ts",
    "packages/blender-elements/.storybook/preview.ts"
  ]
}
